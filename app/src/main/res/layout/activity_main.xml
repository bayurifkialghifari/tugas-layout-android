<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="bottom|right"
        android:text="0"
        android:textSize="50sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="2dp"
                android:text="%" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="2dp"
                android:text="CE" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="2dp"
                android:text="C" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="DEL" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="2dp"
                android:text="7" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="2dp"
                android:text="8" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="2dp"
                android:text="9" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="2dp"
                android:text="4" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="2dp"
                android:text="5" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="2dp"
                android:text="6" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="X" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="2dp"
                android:text="3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="2dp"
                android:text="2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="2dp"
                android:text="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="_" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="2dp"
                android:text="+/-" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="2dp"
                android:text="0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="2dp"
                android:text="," />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="=" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

